<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.PartThreeAndFourFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/arbutus_slab"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_key1A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/arbutus_slab"
                android:paddingStart="12dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/white" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_key1B"
                    android:paddingStart="12dp"
                    android:fontFamily="@font/arbutus_slab"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_key1C"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/arbutus_slab"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_key1D"
                    android:textAllCaps="false"
                    android:paddingStart="12dp"
                    android:fontFamily="@font/arbutus_slab"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button"/>
            <TextView
                android:id="@+id/txt_question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arbutus_slab"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_key"
                android:layout_marginHorizontal="8dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="textStart"
                    android:id="@+id/btn_key2A"
                    android:textAllCaps="false"
                    android:paddingStart="12dp"
                    android:fontFamily="@font/arbutus_slab"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button" />
                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="textStart"
                    android:id="@+id/btn_key2B"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arbutus_slab"
                    android:paddingStart="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="textStart"
                    android:id="@+id/btn_key2C"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arbutus_slab"
                    android:layout_width="match_parent"
                    android:paddingStart="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button" />
                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="textStart"
                    android:id="@+id/btn_key2D"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/arbutus_slab"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button"/>
            <TextView

                android:id="@+id/txt_question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:textColor="@color/text_key"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/arbutus_slab"
                android:layout_marginHorizontal="8dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="textStart"
                    android:id="@+id/btn_key3A"
                    android:textAllCaps="false"
                    android:fontFamily="@font/arbutus_slab"
                    android:paddingStart="12dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="textStart"
                    android:id="@+id/btn_key3B"
                    android:textAllCaps="false"
                    android:fontFamily="@font/arbutus_slab"
                    android:paddingStart="12dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="textStart"
                    android:id="@+id/btn_key3C"
                    android:fontFamily="@font/arbutus_slab"
                    android:textAllCaps="false"
                    android:paddingStart="12dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="textStart"
                    android:id="@+id/btn_key3D"
                    android:fontFamily="@font/arbutus_slab"
                    android:textAllCaps="false"
                    android:paddingStart="12dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/bg_button"
                    android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>